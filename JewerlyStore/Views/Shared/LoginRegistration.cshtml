@using Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/LoginRegistrationStyle.css"/>
<link rel="stylesheet" href="~/css/MediaStyle.css"/>
<div class="container-login-registration">
    <div class="block-container">
        <div class="block">
            <section class="block_item">
                <h2 class="block_item_title">У вас уже есть аккаунт?</h2>
                <button class="block-item_btn signin-btn">Войти</button>
            </section>

            <section class="block_item">
                <h2 class="block_item_title">У вас нет аккаунта?</h2>
                <button class="block-item_btn signup-btn">Зарегистрироваться</button>
            </section>
            
        </div>
        <div class="form-box">
            <form class="form form_signin">
                <h3 class="form_title">Вход</h3>

                <label id="signin_email">
                    <input type="text" placeholder=" "/>
                    <span>Почта</span>
                </label>

                <label id="signin_password">
                    <input type="password" placeholder=" "/>
                    <span>Пароль</span>
                </label>

                <div class="form-btn form_btn_signin">Войти</div>
                <div id="error-messages-signin"></div>
            </form>


            <form class="form form_signup">
                <h3 class="form_title">Регистрация</h3>

                <label id="signup_login">
                    <input type="text" placeholder=" "/>
                    <span>Логин</span>
                </label>

                <label id="signup_email">
                    <input type="text" placeholder=" "/>
                    <span>Почта</span>
                </label>

                <label id="signup_password">
                    <input type="password" placeholder=" "/>
                    <span>Пароль</span>
                </label>

                <label id="signup_confirm_password">
                    <input type="password" placeholder=" "/>
                    <span>Подтвердите пароль</span>
                </label>
                
                <div class="form-btn form_btn_signup">Зарегистрироваться</div>
                <div id="error-messages-signup"></div>
            </form>
    </div>
    <div class="overlay"></div>
    </div>
</div>
